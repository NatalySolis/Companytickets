@model ProyectoSistemaTickets.Models.clientes

@{
    ViewData["Title"] = "Create";
}

<style>
    /* Estilos para el formulario */
    .form-container {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-radius: 5px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        padding: 12px 24px;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        padding: 12px 24px;
        background-color: #6c757d;
        border: none;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-danger {
        color: #dc3545;
    }

    label {
        font-weight: bold;
    }
</style>

<h1>Create</h1>

<h4>clientes</h4>
<hr />
<div class="row form-container">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correo" class="control-label"></label>
                <input asp-for="correo" class="form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombre_empresa" class="control-label"></label>
                <input asp-for="nombre_empresa" class="form-control" />
                <span asp-validation-for="nombre_empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contacto_principal" class="control-label"></label>
                <input asp-for="contacto_principal" class="form-control" />
                <span asp-validation-for="contacto_principal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direc" class="control-label"></label>
                <input asp-for="direc" class="form-control" />
                <span asp-validation-for="direc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tel" class="control-label"></label>
                <input asp-for="tel" class="form-control" />
                <span asp-validation-for="tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idcuenta" class="control-label"></label>
                <input asp-for="idcuenta" class="form-control" />
                <span asp-validation-for="idcuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="dashboard" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
